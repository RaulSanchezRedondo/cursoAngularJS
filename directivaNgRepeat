           <p ng-repeat="user in profesiones |  orderBy: 'nombre'">
                {{user.nombre}} - {{user.profesion}}
            </p>
        </div>
    
        <script>
            var ejemplo = angular.module("lista", []);
            ejemplo.controller("controlador1", ["$scope", function($scope){
                
            $scope.profesiones = [
                {nombre: "Fernando",profesion: "Carpintero"},
